{
  "name": "travel-api",
  "main": "app.ts",
  "version": "1.0.0",
  "author": "Yasin Abbasi",
  "description": "A Platform for Sharing Travel Experiences.",
  "type": "module",
  "keywords": [
    "Travel API",
    "Node.js",
    "Express.js",
    "Drizzle",
    "TypeScript"
  ],
  "license": "ISC",
  "scripts": {
    "prepare": "husky",
    "start": "bun dist/main.js",
    "dev:hot": "bun --hot src/main.ts",
    "dev:watch": "bun --watch src/main.ts",
    "build": "tsc",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:up": "bunx drizzle-kit up",
    "db:check": "bunx drizzle-kit check",
    "db:studio": "bunx drizzle-kit studio"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/bun": "^1.3.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/multer": "^2.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.7",
    "express": "^5.1.0",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "redis": "^5.9.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.3",
    "zod": "^4.1.12"
  }
}
