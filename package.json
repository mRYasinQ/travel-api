{
  "name": "travel-api",
  "main": "main.ts",
  "version": "1.0.0",
  "author": "Yasin Abbasi",
  "description": "A Platform for Sharing Travel Experiences.",
  "type": "module",
  "keywords": [
    "Travel API",
    "Bun",
    "Express.js",
    "Drizzle",
    "TypeScript"
  ],
  "license": "ISC",
  "scripts": {
    "prepare": "husky",
    "start": "bun dist/main.js",
    "dev:hot": "bun --hot src/main.ts",
    "dev:watch": "bun --watch src/main.ts",
    "build": "tsc && copyfiles -u 1 src/**/*.yml dist",
    "db:generate": "bunx drizzle-kit generate",
    "db:migrate": "bunx drizzle-kit migrate",
    "db:push": "bunx drizzle-kit push",
    "db:up": "bunx drizzle-kit up",
    "db:check": "bunx drizzle-kit check",
    "db:superuser": "bun dist/scripts/create-superuser.js",
    "db:superuser:dev": "bun src/scripts/create-superuser.ts"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/bun": "^1.3.5",
    "@types/bytes": "^3.1.5",
    "@types/connect-timeout": "^1.9.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/ms": "^2.1.0",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.4",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "bytes": "^3.1.2",
    "connect-timeout": "^1.9.1",
    "cors": "^2.8.5",
    "drizzle-orm": "^0.44.7",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "ms": "^2.1.3",
    "multer": "^2.0.2",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.11",
    "sharp": "^0.34.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ua-parser-js": "^2.0.6",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  }
}
